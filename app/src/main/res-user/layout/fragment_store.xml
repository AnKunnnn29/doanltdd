<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header -->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/wine_primary">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="Cửa hàng"
                app:titleTextColor="@color/wine_light_surface" />

        </com.google.android.material.appbar.AppBarLayout>

        <!-- Address Search Bar -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/search_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:queryHint="Tìm kiếm địa điểm..."
                app:iconifiedByDefault="false"
                android:background="@android:color/transparent"/>
                    
        </com.google.android.material.card.MaterialCardView>

        <!-- Scrollable Content: List + Map -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- List of Branches -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Danh sách chi nhánh"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/wine_dark_background"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_branches"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="16dp"
                    android:visibility="visible" />

                <!-- Map Container -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bản đồ"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/wine_dark_background"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp">
                    
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <fragment
                            android:id="@+id/map"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <!-- Zoom Buttons -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="12dp">

                            <ImageButton
                                android:id="@+id/btn_zoom_in"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginBottom="8dp"
                                android:background="@drawable/bg_circle_white"
                                android:src="@drawable/ic_add"
                                android:elevation="4dp"
                                app:tint="@color/wine_primary"
                                android:contentDescription="Zoom In" />

                            <ImageButton
                                android:id="@+id/btn_zoom_out"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_circle_white"
                                android:src="@drawable/ic_remove"
                                android:elevation="4dp"
                                app:tint="@color/wine_primary"
                                android:contentDescription="Zoom Out" />
                        </LinearLayout>

                    </RelativeLayout>
                        
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- Selected Branch Info (Hidden by default) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_branch_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_branch_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên Chi Nhánh"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/wine_dark_background" />

                <TextView
                    android:id="@+id/tv_branch_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Địa chỉ chi nhánh"
                    android:textSize="14sp"
                    android:textColor="@color/wine_neutral_dark" />

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Cách bạn: 0.0 km"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/wine_primary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_set_default_branch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Chọn chi nhánh này"
                    app:backgroundTint="@color/wine_primary" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
    
    <!-- Loading Progress -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>