<?xml version="1.0" encoding="utf-8"?>
<!-- TÁC DỤNG TỔNG THỂ: Layout cho màn hình Tài khoản (AccountFragment). -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wine_primary"
    tools:context=".Activities.AccountActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- TÁC DỤNG: Phần header hiển thị ảnh đại diện, tên và email của người dùng. -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="32dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/profile_image"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:padding="4dp"
                        android:src="@drawable/img"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                        app:strokeColor="@color/wine_accent_gold"
                        app:strokeWidth="2dp" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fab_edit_avatar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@id/profile_image"
                        android:layout_alignBottom="@id/profile_image"
                        android:src="@android:drawable/ic_menu_camera"
                        app:fabSize="mini"
                        app:tint="@android:color/white"
                        app:backgroundTint="@color/wine_primary"
                        android:layout_marginEnd="-15dp"
                        android:layout_marginBottom="-15dp"
                        app:elevation="2dp"
                        app:borderWidth="0dp"
                        android:contentDescription="Edit Avatar"/>

                </RelativeLayout>


                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textAppearance="?attr/textAppearanceTitleLarge"
                    android:textColor="@color/wine_light_surface"
                    android:textStyle="bold"
                    tools:text="Thành An" />

                <TextView
                    android:id="@+id/profile_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:alpha="0.8"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="@color/wine_light_surface"
                    tools:text="thanhan@example.com" />

            </LinearLayout>

            <!-- TÁC DỤNG: Thẻ chứa các tùy chọn menu cho người dùng. -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/wine_light_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Tùy chọn: Xem chi tiết người dùng -->
                    <RelativeLayout
                        android:id="@+id/user_detail_option"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/icon_user_detail"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:src="@android:drawable/ic_dialog_info"
                            app:tint="@color/wine_dark_background" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/icon_user_detail"
                            android:text="Chi tiết người dùng"
                            android:textAppearance="?attr/textAppearanceTitleMedium" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_arrow_forward" />

                    </RelativeLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <!-- YÊU CẦU: Thêm mục "Lịch sử đơn hàng" vào màn hình Account. -->
                    <!-- Tùy chọn: Xem lịch sử đơn hàng -->
                    <RelativeLayout
                        android:id="@+id/order_history_option"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/icon_order_history"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:src="@android:drawable/ic_menu_recent_history"
                            app:tint="@color/wine_dark_background" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/icon_order_history"
                            android:text="Lịch sử đơn hàng"
                            android:textAppearance="?attr/textAppearanceTitleMedium" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_arrow_forward" />

                    </RelativeLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <!-- Tùy chọn: Chỉnh sửa hồ sơ -->
                    <RelativeLayout
                        android:id="@+id/profile_option"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/icon_profile"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:src="@android:drawable/ic_menu_edit"
                            app:tint="@color/wine_dark_background" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/icon_profile"
                            android:text="Chỉnh sửa hồ sơ"
                            android:textAppearance="?attr/textAppearanceTitleMedium" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_arrow_forward" />

                    </RelativeLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <!-- Tùy chọn: Đổi mật khẩu -->
                    <RelativeLayout
                        android:id="@+id/change_password_option"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/icon_change_password"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:src="@android:drawable/ic_lock_idle_lock"
                            app:tint="@color/wine_dark_background" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/icon_change_password"
                            android:text="Đổi mật khẩu"
                            android:textAppearance="?attr/textAppearanceTitleMedium" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_arrow_forward" />

                    </RelativeLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                    <!-- Tùy chọn: Cài đặt -->
                    <RelativeLayout
                        android:id="@+id/settings_option"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/icon_settings"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:src="@android:drawable/ic_menu_manage"
                            app:tint="@color/wine_dark_background" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/icon_settings"
                            android:text="Cài đặt"
                            android:textAppearance="?attr/textAppearanceTitleMedium" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_arrow_forward" />

                    </RelativeLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <!-- Tùy chọn: Đăng xuất -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/logout_button"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="24dp"
                        android:text="Đăng xuất"
                        android:textColor="@color/error"
                        app:icon="@android:drawable/ic_lock_power_off"
                        app:iconTint="@color/error" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
