<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="✓ LỌC THEO TRẠNG THÁI"
        android:textColor="@color/wine_dark_background"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <RadioGroup
        android:id="@+id/radio_group_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_all_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tất cả"
            android:textColor="@color/wine_dark_background"
            android:checked="true"
            android:paddingVertical="12dp"
            app:buttonTint="@color/wine_primary" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_active"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đang bán"
            android:textColor="@color/wine_dark_background"
            android:paddingVertical="12dp"
            app:buttonTint="@color/wine_primary" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_inactive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngừng bán"
            android:textColor="@color/wine_dark_background"
            android:paddingVertical="12dp"
            app:buttonTint="@color/wine_primary" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HỦY"
            android:textColor="@color/wine_dark_background"
            style="@style/Widget.Material3.Button.TextButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="ÁP DỤNG"
            android:textStyle="bold"
            android:textColor="@color/wine_light_surface"
            app:backgroundTint="@color/wine_primary"
            app:cornerRadius="24dp" />
    </LinearLayout>

</LinearLayout>