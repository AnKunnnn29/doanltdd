<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wine_neutral_light"
    tools:context=".Activities.AddProductActivity"> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"> <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Thêm Món Nước Mới"
    android:textColor="@color/wine_dark_background" android:textSize="28sp"
    android:textStyle="bold"
    android:layout_marginBottom="24dp"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="16dp" app:cardElevation="2dp"
        app:strokeColor="@color/wine_primary"
        app:strokeWidth="1dp"
        app:cardBackgroundColor="@color/wine_light_surface"> <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/product_image_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_image_placeholder"
            android:background="@color/wine_neutral_light" android:contentDescription="Product Image Placeholder" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_select_image"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:text="CHỌN/CHỤP ẢNH"
            android:textColor="@color/wine_primary"
            android:backgroundTint="@color/wine_light_surface"
            app:icon="@android:drawable/ic_menu_camera"
            app:iconTint="@color/wine_primary"
            app:strokeColor="@color/wine_primary"
            app:strokeWidth="1dp"
            app:cornerRadius="28dp"
            style="@style/Widget.Material3.Button.OutlinedButton"/>
    </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Tên Món Nước"
        app:boxStrokeColor="@color/wine_primary"
        app:hintTextColor="@color/wine_primary"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        style="@style/Widget.Material3.TextInputLayout.FilledBox"> <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edit_text_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/wine_dark_background"
        android:inputType="textCapWords" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Giá Bán (VNĐ)"
        app:boxStrokeColor="@color/wine_primary"
        app:hintTextColor="@color/wine_primary"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        style="@style/Widget.Material3.TextInputLayout.FilledBox">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/wine_primary" android:textStyle="bold"
            android:inputType="numberDecimal" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh mục sản phẩm"
        android:textColor="@color/wine_primary" android:layout_marginBottom="8dp"
        android:textSize="16sp"/>

    <Spinner
        android:id="@+id/spinner_category"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_spinner_background"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:spinnerMode="dropdown"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:hint="Mô Tả Chi Tiết"
        app:boxStrokeColor="@color/wine_primary"
        app:hintTextColor="@color/wine_primary"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        style="@style/Widget.Material3.TextInputLayout.FilledBox">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="3"
            android:gravity="top"
            android:textColor="@color/wine_dark_background"
            android:inputType="textMultiLine" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save_product"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="LƯU MÓN VÀ CẬP NHẬT THỰC ĐƠN"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/wine_light_surface"
        android:backgroundTint="@color/wine_primary"
        app:cornerRadius="30dp"
        app:elevation="4dp"/>

</LinearLayout>
</ScrollView>