<?xml version="1.0" encoding="utf-8"?>
<!-- TÁC DỤNG TỔNG THỂ: Layout cho màn hình Thực đơn, nơi hiển thị toàn bộ sản phẩm và các bộ lọc. -->
<!-- YÊU CẦU: Chuyển toàn bộ nội dung của trang Home cũ sang đây. -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragments.MenuFragment">

    <!-- TÁC DỤNG: Thanh header của màn hình Thực đơn. -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wine_primary"
        android:paddingBottom="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/actionBarSize"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/menu_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="Thực đơn"
                android:textAppearance="?attr/textAppearanceTitleLarge"
                android:textColor="@color/wine_light_surface"
                android:textStyle="bold" />

        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- TÁC DỤNG: Khối nội dung chính có thể cuộn, với nền trắng bo góc. -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar_menu"
        android:background="@drawable/bg_arc_top_white"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="32dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp">

            <!-- TÁC DỤNG: Thanh tìm kiếm sản phẩm. -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/search_view_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/search_background"
                    app:iconifiedByDefault="false"
                    app:queryHint="Tìm kiếm đồ uống..." />

                <!-- Danh sách gợi ý tìm kiếm (ẩn ban đầu). -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_search_suggestions_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@color/white"
                    android:elevation="4dp"
                    android:visibility="gone"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            </LinearLayout>
            
            <!-- TÁC DỤNG: Tiêu đề cho mục danh mục. -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Danh mục"
                android:textColor="@color/wine_dark_background"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- TÁC DỤNG: Thẻ chứa danh sách các danh mục. -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#F0F0F0">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/category_recycler_view_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            </com.google.android.material.card.MaterialCardView>


            <!-- TÁC DỤNG: Tiêu đề và các nút lọc cho danh sách sản phẩm. -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/section_title_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Tất cả sản phẩm"
                    android:textColor="@color/wine_dark_background"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btn_filter_price_menu"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Lọc theo giá"
                        android:padding="4dp"
                        android:src="@drawable/ic_sort"
                        app:tint="@color/wine_primary" />

                    <ImageView
                        android:id="@+id/btn_clear_filter_menu"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:contentDescription="Xóa lọc"
                        android:padding="4dp"
                        android:src="@android:drawable/ic_menu_close_clear_cancel"
                        android:visibility="gone"
                        app:tint="@color/wine_neutral_dark" />

                </LinearLayout>

            </RelativeLayout>

            <!-- TÁC DỤNG: Danh sách hiển thị toàn bộ sản phẩm. -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/product_recycler_view_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingBottom="80dp"
                tools:listitem="@layout/list_item_product" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>