<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Logo Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/ic_tea_cup"
                android:contentDescription="Tea Shop Logo"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Houjicha"
                android:textSize="48sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trà rang đậm vị"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:alpha="0.9"
                android:gravity="center"
                android:lineSpacingExtra="4dp"/>

        </LinearLayout>

        <!-- Buttons Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <!-- Login Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_welcome_login"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="ĐĂNG NHẬP"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/tea_dark"
                android:backgroundTint="@color/white"
                app:cornerRadius="32dp"
                android:elevation="4dp"
                android:layout_marginBottom="16dp"/>

            <!-- Register Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_welcome_register"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="ĐĂNG KÝ"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:strokeColor="@color/white"
                app:strokeWidth="2dp"
                android:backgroundTint="@android:color/transparent"
                app:cornerRadius="32dp"
                android:layout_marginBottom="16dp"/>

            <!-- Guest Mode -->
            <TextView
                android:id="@+id/text_guest_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Tiếp tục với tư cách khách"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
