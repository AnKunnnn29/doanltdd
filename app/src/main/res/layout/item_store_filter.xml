<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/store_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="20dp"
    android:paddingVertical="14dp"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- Store Icon -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_icon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/wine_neutral_light">

        <TextView
            android:id="@+id/tv_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ðŸª"
            android:textSize="20sp"
            android:gravity="center" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Store Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="14dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TÃªn chi nhÃ¡nh"
            android:textColor="@color/wine_dark_background"
            android:textSize="15sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tv_store_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Äá»‹a chá»‰"
            android:textColor="@color/wine_neutral_dark"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Check Icon -->
    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/checkbox_on_background"
        app:tint="@color/wine_primary"
        android:visibility="gone" />

</LinearLayout>
