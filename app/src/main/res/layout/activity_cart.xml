<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CartActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_cart"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/wine_primary"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="Giỏ hàng"
            app:titleTextColor="@color/white">

            <!-- Icon lịch sử đơn hàng -->
            <ImageView
                android:id="@+id/btn_order_history"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="Lịch sử đơn hàng"
                android:focusable="true"
                android:padding="8dp"
                android:src="@drawable/ic_order_history"
                app:tint="@color/white" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Select All Bar -->
            <LinearLayout
                android:id="@+id/ll_select_all_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@color/white"
                android:elevation="2dp"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/cb_select_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chọn tất cả"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/btn_delete_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xóa"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:textColor="@color/design_default_color_error"/>

            </LinearLayout>

            <!-- Cart Items - Chiều cao tối thiểu để luôn hiển thị -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_cart_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="150dp"
                android:nestedScrollingEnabled="false"
                android:padding="8dp"
                tools:listitem="@layout/item_cart" />

            <TextView
                android:id="@+id/tv_empty_cart"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center"
                android:text="Giỏ hàng của bạn đang trống."
                android:textSize="16sp"
                android:textColor="@color/wine_neutral_dark"
                android:visibility="gone" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#F5F5F5"/>

            <!-- Checkout Section -->
            <LinearLayout
                android:id="@+id/bottom_checkout_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Hình thức nhận hàng -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hình thức nhận hàng"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/wine_dark_background"/>

                <RadioGroup
                    android:id="@+id/rg_delivery_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/rb_pickup"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lấy tận nơi"
                        android:checked="true"/>

                    <RadioButton
                        android:id="@+id/rb_delivery"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Giao hàng"/>

                </RadioGroup>

                <!-- Chọn chi nhánh -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chọn chi nhánh"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/wine_dark_background"/>

                <Spinner
                    android:id="@+id/spinner_store"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_spinner_background" />

                <!-- Địa chỉ giao hàng (chỉ hiện khi chọn DELIVERY) -->
                <LinearLayout
                    android:id="@+id/ll_delivery_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Địa chỉ giao hàng"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/wine_dark_background"/>

                    <EditText
                        android:id="@+id/et_delivery_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="Nhập địa chỉ giao hàng"
                        android:inputType="textMultiLine"
                        android:maxLines="3"
                        android:padding="12dp"
                        android:background="@drawable/rounded_spinner_background"/>

                </LinearLayout>

                <!-- Voucher Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã giảm giá"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/wine_dark_background"/>

                <LinearLayout
                    android:id="@+id/ll_voucher_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/et_voucher_code"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:hint="Nhập mã voucher"
                        android:inputType="textCapCharacters"
                        android:paddingHorizontal="12dp"
                        android:background="@drawable/rounded_spinner_background"
                        android:textSize="14sp"/>

                    <Button
                        android:id="@+id/btn_apply_voucher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Áp dụng"
                        style="@style/Widget.Material3.Button.TonalButton"/>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_select_voucher"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="16dp"
                    android:text="Chọn voucher có sẵn"
                    android:textSize="13sp"
                    style="@style/Widget.Material3.Button.OutlinedButton"/>

                <!-- Phương thức thanh toán -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phương thức thanh toán"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/wine_dark_background"/>

                <Spinner
                    android:id="@+id/spinner_payment_method"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_spinner_background" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="12dp"/>

                <!-- Price Summary -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tạm tính:"
                        android:textSize="14sp"
                        android:textColor="@color/wine_neutral_dark"/>

                    <TextView
                        android:id="@+id/tv_total_price_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 VNĐ"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Giảm giá:"
                        android:textSize="14sp"
                        android:textColor="@color/design_default_color_error" />

                    <TextView
                        android:id="@+id/tv_discount_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 VNĐ"
                        android:textSize="14sp"
                        android:textColor="@color/design_default_color_error" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tổng cộng:"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/wine_dark_background"/>

                    <TextView
                        android:id="@+id/tv_final_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 VNĐ"
                        android:textColor="@color/wine_primary"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_checkout"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="Thanh toán"
                    android:textSize="16sp"
                    android:backgroundTint="@color/wine_primary"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
