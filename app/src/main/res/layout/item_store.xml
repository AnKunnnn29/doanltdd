<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/wine_neutral_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Store Name and Status -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/chip_store_status"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="?attr/textAppearanceTitleLarge"
                android:textColor="@color/wine_dark_background"
                android:textStyle="bold"
                tools:text="Houjicha - Quận 1" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_store_status"
                style="@style/Widget.Material3.Chip.Assist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                tools:chipBackgroundColor="@color/success"
                tools:text="Hoạt động" />
        </RelativeLayout>

        <!-- Address -->
        <TextView
            android:id="@+id/tv_store_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawableStart="@android:drawable/ic_dialog_map"
            android:drawablePadding="8dp"
            android:drawableTint="@color/wine_neutral_dark"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="@color/wine_neutral_dark"
            tools:text="123 Đường Nguyễn Huệ, P. Bến Nghé, Quận 1, TP.HCM" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Contact Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Phone -->
            <TextView
                android:id="@+id/tv_store_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@android:drawable/ic_menu_call"
                android:drawablePadding="8dp"
                android:drawableTint="@color/wine_neutral_dark"
                android:gravity="center_vertical"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/wine_dark_background"
                tools:text="0123 456 789" />

            <!-- Hours -->
            <TextView
                android:id="@+id/tv_store_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@android:drawable/ic_menu_recent_history"
                android:drawablePadding="8dp"
                android:drawableTint="@color/wine_neutral_dark"
                android:gravity="center_vertical"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/wine_dark_background"
                tools:text="8:00 - 22:00" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
