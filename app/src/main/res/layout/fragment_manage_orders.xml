        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="ChÆ°a cÃ³ Ä‘Æ¡n hÃ ng nÃ o"
