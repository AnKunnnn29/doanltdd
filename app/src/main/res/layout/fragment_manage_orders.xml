                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/arrow_down_float"
                        app:tint="@color/wine_neutral_dark" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Filter Tabs -->
        <HorizontalScrollView
            android:id="@+id/scroll_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="8dp">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                app:tabTextColor="@color/wine_neutral_dark"
                app:tabSelectedTextColor="@color/wine_primary"
                app:tabIndicatorColor="@color/wine_primary"
                app:tabIndicatorHeight="3dp"
                app:tabIndicatorFullWidth="false"
                app:tabRippleColor="@color/wine_neutral_light"
                app:tabPaddingStart="12dp"
                app:tabPaddingEnd="12dp"
                app:tabMode="scrollable"
                app:tabGravity="start"
                app:tabTextAppearance="@style/TabTextAppearance">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Táº¥t cáº£" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chá» xá»­ lÃ½" />

