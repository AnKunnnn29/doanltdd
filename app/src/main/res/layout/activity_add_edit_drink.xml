<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/wine_light_surface"> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"> <com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/wine_neutral_light"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="@color/wine_neutral_light">

    <ImageView
        android:id="@+id/img_drink"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_image_placeholder"
        android:contentDescription="Drink Image" />

</com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_select_image"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="24dp"
        android:text="Chọn ảnh sản phẩm"
        android:textStyle="bold"
        android:textColor="@color/wine_primary"
        app:icon="@android:drawable/ic_menu_camera"
        app:iconGravity="textStart"
        app:iconTint="@color/wine_primary"
        app:strokeColor="@color/wine_primary"
        app:strokeWidth="1dp"
        app:cornerRadius="28dp"
        style="@style/Widget.Material3.Button.OutlinedButton" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Tên món"
        app:hintTextColor="@color/wine_primary"
        app:boxStrokeColor="@color/wine_primary"
        app:startIconDrawable="@android:drawable/ic_menu_info_details"
        app:startIconTint="@color/wine_neutral_dark"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@color/wine_dark_background"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Mô tả chi tiết"
        app:hintTextColor="@color/wine_primary"
        app:boxStrokeColor="@color/wine_primary"
        app:startIconDrawable="@android:drawable/ic_menu_edit"
        app:startIconTint="@color/wine_neutral_dark"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:maxLines="5"
            android:textColor="@color/wine_dark_background"
            android:gravity="top" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Giá bán"
        app:prefixText="₫ "
        app:prefixTextColor="@color/wine_dark_background"
        app:hintTextColor="@color/wine_primary"
        app:boxStrokeColor="@color/wine_primary"
        app:startIconDrawable="@android:drawable/ic_menu_sort_by_size"
        app:startIconTint="@color/wine_neutral_dark"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textColor="@color/wine_primary"
            android:textStyle="bold"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Danh mục"
        app:hintTextColor="@color/wine_primary"
        app:boxStrokeColor="@color/wine_primary"
        app:startIconDrawable="@android:drawable/ic_menu_view"
        app:startIconTint="@color/wine_neutral_dark"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <AutoCompleteTextView
            android:id="@+id/spinner_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:textColor="@color/wine_dark_background"
            android:dropDownSelector="@color/wine_neutral_light"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_image_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="URL ảnh"
        app:hintTextColor="@color/wine_primary"
        app:boxStrokeColor="@color/wine_primary"
        app:startIconDrawable="@android:drawable/ic_menu_gallery"
        app:startIconTint="@color/wine_neutral_dark"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_image_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textUri"
            android:textColor="@color/wine_dark_background"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:indeterminateTint="@color/wine_primary"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Hủy"
            android:textColor="@color/wine_neutral_dark"
            app:strokeColor="@color/wine_neutral_dark"
            app:strokeWidth="1dp"
            app:cornerRadius="28dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Lưu"
            android:textStyle="bold"
            android:textColor="@color/wine_light_surface"
            android:backgroundTint="@color/wine_primary"
            app:cornerRadius="28dp"
            app:elevation="4dp"
            app:icon="@android:drawable/ic_menu_save"
            app:iconTint="@color/wine_light_surface"
            app:iconGravity="textStart" />

    </LinearLayout>

</LinearLayout>

</ScrollView>