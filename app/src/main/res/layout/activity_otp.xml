<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/wine_primary"
    tools:context=".Activities.OtpActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="Logo"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_lock"
                app:tint="@color/wine_accent_gold"/> <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XÁC THỰC OTP"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/wine_light_surface"
            android:fontFamily="sans-serif-medium"/>

            <TextView
                android:id="@+id/text_otp_instruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhập mã OTP đã được gửi đến số điện thoại của bạn"
                android:textColor="@color/wine_light_surface"
                android:alpha="0.9"
                android:textAlignment="center"
                android:textSize="18sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/wine_light_surface"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="28dp"
                    android:text="Mã Bảo Mật"
                    android:textColor="@color/wine_dark_background"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="@color/wine_neutral_light"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="1dp"
                    app:boxStrokeColor="@color/wine_primary"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:startIconDrawable="@android:drawable/ic_lock_lock"
                    app:startIconTint="@color/wine_primary"
                    app:hintTextColor="@color/wine_primary"
                    android:hint="Mã OTP gồm 6 chữ số">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_otp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="6"
                        android:textSize="18sp"
                        android:textColor="@color/wine_dark_background"
                        android:paddingVertical="16dp"
                        android:paddingHorizontal="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_verify_otp"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="XÁC THỰC"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/wine_light_surface"
                    android:backgroundTint="@color/wine_primary"
                    app:cornerRadius="32dp"
                    app:elevation="4dp"/>

                <TextView
                    android:id="@+id/text_resend_otp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chưa nhận được mã? Gửi lại"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp"
                    android:textColor="@color/wine_primary"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>